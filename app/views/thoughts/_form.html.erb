<%= form_for(@thought, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @thought.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@thought.errors.count, "error") %> prohibited this action_item from being saved:</h2>

      <ul>
      <% @thought.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">
  <%= f.label :name, class: "control-label" %>
  <div class="controls">
    <%= f.text_field :name, :class=> "action_item input-xxlarge" %>
  </div>
</div>

<% if @parent %>
<div class="control-group">
  <%= label_tag '', 'Parent', class: "control-label" %>
  <div class="controls">
    <%= link_to @parent.name, url_for(@parent) %>
  </div>
</div>
<% end %>

<div class="control-group">
  <div class="actions controls">
    <%= f.submit %>
  </div>
</div>
<% end %>
