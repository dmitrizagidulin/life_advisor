<%= form_for(Answer.new, :html => { :class => "form-inline inline form-nomargin"}) do |f| %>
    name <%= f.text_field :name, :class => "link", :tabindex => starting_index %>
    <%= f.hidden_field :parent_type, value: parent_type %>
    <%= f.hidden_field :parent_key, value: parent_key %>
    <%= f.submit 'Add Answer', :class=> "link btn" %>
<% end %>

<table class="table table-striped table-hover" id="links_table">
<thead>
  <tr>
    <th>Answer</th>
    <th>Added</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% answers.each do | answer | %>
  <tr>
    <td><%= answer.name %>
    <% if answer.description %>
      <div class="muted">
      <%= answer.description %>
      </div>
    <% end %>
    </td>
    <td><small><%= answer.created_at.localtime.strftime("%b %d, %Y")  %></small></td>
    <td>
      <%= link_to 'Edit', edit_answer_path(answer), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', '/answers/'+answer.key, method: :delete, :class => 'btn btn-mini btn-danger',
        data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</tbody>
</table>