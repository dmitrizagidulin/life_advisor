<h2>Completed Items</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Done?</th>
    <th>Task</th>
    <th>Completed</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @completed_items.each do |action_item| %>
  <tr>
    <td><%= check_box_tag action_item.key, '1', action_item.done, :class => 'action_item_checkbox' %></td>
    <td><%= link_to action_item.name, edit_action_item_path(action_item) %></td>
    <td><%= action_item.completed_at.localtime.strftime("%b %d, %y") if action_item.completed_at %></td>
    <td><%= link_to 'Destroy', '/action_items/'+action_item.key, method: :delete, :class => 'btn btn-mini btn-danger',
      data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
<br />
