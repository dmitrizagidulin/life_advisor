<%= render 'new' %>

<h2>Action Items</h2>

<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <tbody>
<% @action_items.each do |action_item| %>
  <tr>
    <td><%= check_box_tag action_item.key, '1', action_item.done, :class => 'action_item_checkbox' %></td>
    <td><span id="task-<%= action_item.key %>"><%= link_to action_item.name, edit_action_item_path(action_item) %></td>
    <td><%= link_to 'Destroy', 'action_items/'+action_item.key, method: :delete, :class => 'btn btn-mini btn-danger',
      data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />
<%= link_to 'New Action item', new_action_item_path, :class => 'btn' %>

