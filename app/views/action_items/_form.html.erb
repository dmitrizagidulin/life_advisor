<%= form_for(@action_item, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @action_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@action_item.errors.count, "error") %> prohibited this action_item from being saved:</h2>

      <ul>
      <% @action_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">
  <%= f.label :name, class: "control-label" %>
  <div class="controls">
    <%= f.text_field :name, :class=> "action_item input-xxlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :done, class: "control-label" %>
  <div class="controls">
    <%= f.check_box :done, :class=> "action_item" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :completed_at, class: "control-label" %>
  <div class="controls">
    <%= f.text_field :completed_at, :class=> "action_item" %>
  </div>
</div>

<% unless @parent.nil? %>
<div class="control-group">
  <%= label_tag '', 'Parent', class: "control-label" %>
  <div class="controls">
    <%= link_to @parent.name, url_for(@parent) %>
  </div>
</div>
<% end %>

<%= render partial: 'action_items/area_select', locals: { form: f } %>

<div class="control-group">
    <%= f.label :description, class: "control-label" %>
  <div class="controls">
    <%= f.text_area :description, :class=> "action_item", :rows => 5 %><br />
  </div>
</div>
   
<div class="control-group">
  <div class="actions controls">
    <%= f.submit %>
  </div>
</div>
<% end %>
