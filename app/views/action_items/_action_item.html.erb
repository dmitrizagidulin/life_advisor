  <tr>
    <td><%= check_box_tag action_item.key, '1', action_item.done, :class => 'action_item_checkbox' %></td>
    <td class="span6">
      <% if action_item.parent_type == 'project' %>
        <span class="area-<%= action_item.area %>">[ <%= link_to 'proj', '/projects/'+action_item.parent_key %> ]</span>
      <% end %>
      <span id="task-<%= action_item.key %>" class="area-<%= action_item.area %>"><%= link_to action_item.name, edit_action_item_path(action_item) %></span>
      <% unless action_item.description.nil? %>
      <br />
      <div class="muted">
        <%= action_item.description %>
      </div>
      <% end %>
    </td>
    <td>
    <%= render partial: 'action_items/action_item_category_buttons', locals: { action_item: action_item } %>
    </td>
    <td><small><%= action_item.created_at.localtime.strftime("%b %d, %y")  %></small></td>
    <td><%= link_to 'Destroy', '/action_items/'+action_item.key, method: :delete, :class => 'btn btn-mini btn-danger',
      data: { confirm: 'Are you sure?' } %></td>
  </tr>