<h2>All Items</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Done?</th>
    <th>Task</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @all_items.each do |action_item| %>
  <tr>
    <td><%= check_box_tag action_item.key, action_item.done, action_item.done, :class => 'action_item' %></td>
    <td><%= link_to action_item.name, action_item %></td>
    <td><%= link_to 'Edit', edit_action_item_path(action_item), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', action_item, method: :delete, :class => 'btn btn-mini btn-danger',
      data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
<br />
