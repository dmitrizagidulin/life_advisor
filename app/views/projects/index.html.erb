<h1>Projects</h1>

<table class="table table-striped table-hover">
<tbody>
<% @projects.each do |project| %>
  <tr>
    <td class="span6"><%= link_to project.name, project %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', project, method: :delete, :class => 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Project', new_project_path, :class => 'btn' %>
