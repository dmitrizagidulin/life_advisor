<%= form_for(@project, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
    <%= f.text_field :name, :class=> "project" %><br />
    </div>
</div>

<div class="control-group">
    <%= f.label :url, class: "control-label" %>
    <div class="controls">
    <%= f.text_field :url, :class=> "project" %><br />
    </div>
</div>

<div class="control-group">
    <%= f.label :bump_count, class: "control-label" %>
    <div class="controls">
    <%= f.text_field :bump_count, :class=> "project" %><br />
    </div>
</div>

<%= render partial: 'action_items/area_select', locals: { form: f } %>

<div class="control-group">
    <%= f.label :description, class: "control-label" %>
  <div class="controls">
    <%= f.text_area :description, :class=> "project", :rows => 5 %><br />
  </div>
</div>

<div class="control-group">
  <div class="actions controls">
    <%= f.submit %>
  </div>
</div>
<% end %>